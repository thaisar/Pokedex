<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                    android:layout_height="wrap_content" app:cardCornerRadius="5dp"
                                    android:layout_margin="10dp" android:id="@+id/cardView"
                                    android:focusable="auto">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/card_constraintLayout"
            android:focusable="auto">

        <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:id="@+id/imageViewCard"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0" app:srcCompat="@drawable/question_mark"
                android:contentDescription="@string/pokemon_sprite" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/textViewCard"
                android:layout_marginStart="16dp"/>
        <TextView
                android:text="@string/pokemon_name"
                android:layout_width="167dp"
                android:layout_height="20dp"
                android:id="@+id/textViewCard"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/imageViewCard"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewCard" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/imageViewCard"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
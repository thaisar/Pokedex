<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:id="@+id/imageViewPokemonProfile"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.497"
            tools:srcCompat="@drawable/question_mark"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPokemonProfile"
            app:layout_constraintTop_toBottomOf="@+id/imageViewPokemonProfile" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textSize="36sp"
            tools:text="@string/pokemon_name"/>
    <ImageView
            android:layout_width="64dp"
            android:layout_height="23dp"
            android:id="@+id/imageViewType2"
            app:layout_constraintTop_toBottomOf="@+id/imageViewType1"
            app:layout_constraintEnd_toEndOf="@+id/imageViewType1"
            app:layout_constraintStart_toStartOf="@+id/imageViewType1" tools:srcCompat="@drawable/unknown"
            app:layout_constraintHorizontal_bias="1.0"/>
    <ImageView
            android:layout_width="64dp"
            android:layout_height="23dp"
            android:id="@+id/imageViewType1"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textViewPokemonProfile"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            tools:srcCompat="@drawable/unknown"/>
    <TextView
            android:text="Experience:"
            android:layout_width="77dp"
            android:layout_height="19dp"
            android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="136dp" app:layout_constraintTop_toBottomOf="@+id/imageViewType2"
            app:layout_constraintHorizontal_bias="0.257"/>
    <TextView
            android:text="Abilitites:"
            android:layout_width="63dp"
            android:layout_height="17dp"
            android:id="@+id/textView6" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="168dp" app:layout_constraintTop_toBottomOf="@+id/imageViewType2"
            app:layout_constraintHorizontal_bias="0.246"/>
    <TextView
            android:text="Weight:"
            android:layout_width="48dp"
            android:layout_height="22dp"
            android:id="@+id/textView7" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="100dp" app:layout_constraintTop_toBottomOf="@+id/imageViewType2"
            app:layout_constraintHorizontal_bias="0.237"/>
    <TextView
            android:text="Height:"
            android:layout_width="48dp"
            android:layout_height="21dp"
            android:id="@+id/textView5" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/imageViewType2"
            app:layout_constraintHorizontal_bias="0.242"/>
    <TextView
            android:text="ID:"
            android:layout_width="41dp"
            android:layout_height="20dp"
            android:id="@+id/textView4" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/imageViewType2"
            app:layout_constraintHorizontal_bias="0.237"/>
    <TextView
            android:layout_width="178dp"
            android:layout_height="20dp"
            android:id="@+id/expTextView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/pesoTextView"
            app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="178dp"
            android:layout_height="20dp"
            android:id="@+id/pesoTextView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/alturaTextView"
            app:layout_constraintStart_toEndOf="@+id/textView7" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="178dp"
            android:layout_height="20dp"
            android:id="@+id/alturaTextView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/idTextView"
            app:layout_constraintStart_toEndOf="@+id/textView5" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.011"/>
    <TextView
            android:layout_width="178dp"
            android:layout_height="20dp"
            android:id="@+id/idTextView" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewType2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/textView4"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="134dp"
            android:layout_height="18dp"
            android:id="@+id/habilidade1TextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="144dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView6"/>
    <TextView
            android:layout_width="134dp"
            android:layout_height="18dp"
            android:id="@+id/habilidade3TextView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="144dp"
            app:layout_constraintTop_toBottomOf="@+id/habilidade1TextView"
            android:layout_marginTop="40dp"/>
    <TextView
            android:layout_width="134dp"
            android:layout_height="18dp"
            android:id="@+id/habilidade2TextView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="144dp"
            app:layout_constraintTop_toBottomOf="@+id/habilidade1TextView"
            android:layout_marginTop="12dp"/>
</android.support.constraint.ConstraintLayout>
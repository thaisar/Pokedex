<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:id="@+id/imageViewPokemonProfile"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:srcCompat="@drawable/question_mark"/>
    <TextView
            android:text="@string/pokemon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPokemonProfile"
            app:layout_constraintTop_toBottomOf="@+id/imageViewPokemonProfile" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textSize="36sp"/>
    <TextView
            android:text="Type 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewType1"
            app:layout_constraintTop_toBottomOf="@+id/textViewPokemonProfile"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Type 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewType2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewType1"
            app:layout_constraintStart_toStartOf="@+id/textViewType1"
            app:layout_constraintEnd_toEndOf="@+id/textViewType1"/>
</android.support.constraint.ConstraintLayout>